	      <url>http://3.0.49.225:9980/varma/repository/icicibank-release/</url>
	    </repository>
	    
	    <snapshotRepository>
	      <id>nexus</id>
	      <name>Chanikya Snapshot Nexus Repository </name>
	      <url>http://3.0.49.225:9980/varma/repository/icicibank-snapshot/</url>
	    </snapshotRepository>
	    
	</distributionManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
